<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<weather reset="0" enable="1">

    <overcast>
        <!-- Облачность -->
        <current actual="0.5" time="300" duration="1800" />
        <limits min="0.2" max="1.0" />
        <timelimits min="900" max="1800" />
        <changelimits min="0.1" max="1.0" />
    </overcast>

    <fog>
        <!-- Туман -->
        <current actual="0.0" time="0" duration="1800" />
        <limits min="0.0" max="1.0" />
        <timelimits min="900" max="1800" />
        <changelimits min="0.1" max="0.6" />
    </fog>

    <rain>
        <!-- Дождь отключён -->
        <current actual="0.0" time="0" duration="99999" />
        <limits min="0.0" max="0.0" />
        <timelimits min="300" max="3600" />
        <changelimits min="0.0" max="0.0" />
        <thresholds min="1.0" max="1.0" end="5" />
    </rain>

    <windMagnitude>
        <!-- Ветер зимой более ощутимый, 2–12 м/с -->
        <current actual="4.0" time="300" duration="1200" />
        <limit min="2.0" max="12.0" />
        <timelimits min="600" max="1200" />
        <changelimits min="1.0" max="5.0" />
    </windMagnitude>

    <windDirection>
        <!-- Направление ветра меняется плавно -->
        <current actual="0.0" time="300" duration="1200" />
        <limit min="-3.14" max="3.14" />
        <timelimits min="600" max="1200" />
        <changelimits min="-0.5" max="0.5" />
    </windDirection>

    <snowfall>
		<!-- Легкий снег (Пока еще летняя карта) -->
		<current actual="0.0" time="900" duration="600" />
		<limit min="0.0" max="0.2" />
		<timelimits min="1200" max="2400" />
		<changelimits min="0.0" max="0.1" />
		<thresholds min="0.5" max="1.0" end="300" />
		
        <!-- Снег
        <current actual="0.0" time="300" duration="1800" />
        <limit min="0.0" max="1.0" />
        <timelimits min="900" max="1800" />
        <changelimits min="0.2" max="1.0" />
        <thresholds min="0.3" max="1.0" end="300" />
		-->
    </snowfall>

    <!-- Гроза отключена -->
    <storm density="0.0" threshold="1.0" timeout="99999"/>

</weather>
